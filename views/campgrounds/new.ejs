<% include ../partials/header %>



    <div class="row">
        <h1 style="text-align: center"> Add your place here!</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="enter place name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="enter place price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="enter place img url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description of place">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="youtubeurl" placeholder="youtube reviews link of place">
            </div>
            <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>



<% include ../partials/footer %>










































