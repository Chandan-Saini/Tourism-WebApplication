<% include ../partials/header %>

<div class="row">
   <div class="col-md-4">
       <h1><%= user.firstName +" "+ user.lastName %></h1>
   <div class="thumbnail">
     
     <img style=" border-radius:5px; " src="<%= user.avatar %>" alt="user profile image">
     <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
     </div>
     <p><%= user.description %></p>
     </div>
     <div class="col-md-4">
         <h3 style="background-color:#1063EE ; margin-top:70px; border-radius:5px; color:white ">List of <%= user.username %>'s Products</h3>
         <ol>
             <% campgrounds.forEach(function(campground){ %>
             <li><a href="/campgrounds/<%=campground.id %>"><%=campground.name %></a></li>
             <% }) %>
             
         </ol>
     </div>
</div> 

<% include ../partials/footer %>